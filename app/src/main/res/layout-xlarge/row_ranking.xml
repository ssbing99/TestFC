<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/MainBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:layout_marginLeft="20dp"
            android:textColor="@color/ButtonFont"
            android:textSize="@dimen/fontSizeXLarge"
            android:background="@drawable/circle_icon_background"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tan Sai Boon"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:ellipsize="end"
            android:textColor="@color/FontColor"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_ranking"
            android:layout_toEndOf="@+id/tv_ranking"
            android:textSize="@dimen/fontSizeXLarge" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 Points"
            android:textColor="@color/FontColor"
            android:textSize="@dimen/fontSizeXLarge"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name" />

        <Button
            android:id="@+id/challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge"
            android:textSize="35dp"
            android:textColor="@color/ButtonFont"
            android:layout_alignParentRight="true"
            android:background="@color/ButtonColor"
            android:padding="5dp"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/tv_point"
        />

</LinearLayout>