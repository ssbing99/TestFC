<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ReminderDetail"
        android:layout_margin="10dp">

        <TableRow>
            <TextView
                android:layout_column="0"
                android:id="@+id/txtReminderActivityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activityLabel"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"
                android:layout_marginRight="20dp" />
            <TextView
                android:layout_column="1"
                android:id="@+id/txtReminderActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/FontColor"
                android:text="Running"
                android:textSize="@dimen/fontSizeXLarge"></TextView>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:id="@+id/txtReminderRepeatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repeatLabel"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"/>
            <TextView
                android:layout_column="1"
                android:id="@+id/txtReminderRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"></TextView>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:id="@+id/txtReminderDayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dayLabel"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"/>
            <TextView
                android:layout_column="0"
                android:id="@+id/txtReminderDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"></TextView>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:id="@+id/txtReminderTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeLabel"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"/>
            <TextView
                android:id="@+id/txtReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textColor="@color/FontColor"
                android:textSize="@dimen/fontSizeXLarge"></TextView>
        </TableRow>

    </TableLayout>

            <ToggleButton
                android:id="@+id/myToggleButton"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:background="@color/ButtonColor"
                android:textColor="@color/ButtonFont"
                android:textSize="@dimen/fontSizeXLarge"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ReminderDetail"
                android:layout_marginTop="20dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ReminderDetail"
        android:background="@android:color/white" />

</RelativeLayout>


